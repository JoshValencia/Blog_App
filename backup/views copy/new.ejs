<%-include("partials/header.ejs")%>
<div class="ui main text container segment">
	<div class="ui huge header">New Blog</div>
	<form action="/blogs" method="POST" class="ui form">
		<div class="fields">
			<label for="title">Title</label>
			<input id="title" type="text" name="blog[title]" placeholder="title">
		</div>
		<div class="fields">
			<label for="image">Image</label>
			<input id="image" type="text" name="blog[image]" placeholder="image">
		</div>
		<div class="fields">
			<label for="content">Blog Content</label>
			<textarea id="content" name="blog[body]" required></textarea>
		</div>
		<input class="ui violet basic button" type="submit">
	</form>
</div>
<%-include("partials/header.ejs")%>